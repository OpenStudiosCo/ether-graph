blue1 = #48cbd9
blue2 = #79e7e7
dark = #14044d
shade = #716b94
text-color = #c6c5d4
bg-color = #37367b

html, body {
    background: bg-color;
    color: text-color;
}

// Dummy styles from d3-voronoi-treemap example:
svg {
background-color: rgb(250,250,250);
}

#title {
letter-spacing: 4px;
font-weight: 700;
font-size: x-large;
}

text.tiny {
font-size: 10pt;
}
text.light {
fill: lightgrey
}

.world {
stroke: lightgrey;
    stroke-width: 4px;
}

.cell {
stroke: white;
stroke-width: 1px;
}

.label {
text-anchor: middle;
fill: white;
}

.label>.name {
dominant-baseline: text-after-edge;
}

.label>.value {
dominant-baseline: text-before-edge;
}

.hoverer {
fill: transparent;
stroke: white;
stroke-width:0px;
}

.hoverer:hover {
stroke-width: 3px;
}

.legend-color {
stroke-width: 1px;
stroke:darkgrey;
}