shade = #716b94
text-color = #c6c5d4
bg-color = #37367b

html, body {
    background: bg-color;
    color: text-color;
}
.wrapper {
    width: 80vw;
    margin: 0 auto;
    text-align: center;
}

h1 {
    text-align: left;
}

#timeline {
    width: 80%;
}

.legend text {
    fill: text-color;
}

// Dummy styles from d3-voronoi-treemap example:



text.tiny {
font-size: 10pt;
}
text.light {
    
fill: lightgrey
}

.world {
    stroke: lightgrey;
    stroke-width: 4px;
}

.cell {
    stroke: white;
    stroke-width: 1px;
}

.label {
    text-anchor: middle;
    fill: white;
}

.label>.name {
    dominant-baseline: text-before-edge;

}

.label>.value {
    dominant-baseline: text-after-edge;
}

.hoverer {
    fill: transparent;
    stroke: white;
    stroke-width:0px;
}

.hoverer:hover {
    stroke-width: 3px;
}

.legend-color {
    stroke-width: 1px;
    stroke:darkgrey;
}